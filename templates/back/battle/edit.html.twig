{% extends 'back/_layout/_base.html.twig' %}
{% block title %}{% endblock %}

{% set title = "Create battle" %}
{% set actionName = "Create battle" %}
{% if context is defined and context == "update" %}
    {% set title = "Update battle " ~ battle.name %}
    {% set actionName = "Update battle" %}
{% endif %}

{% block breadcrumb %}
    <div class="breadcrumb">
        <a href="{{ path("gameBack_home", {'game': game.id}) }}"><i class="fal fa-home"></i>Home</a>
        <span> > </span>
        <a href="{{ path("gameBack_battle_list", {'game': game.id}) }}"><i class="fal fa-swords"></i>Battles</a>
        <span> > </span>
        <span><i class="fal fa-edit"></i>{{ title }}</span>
    </div>
{% endblock %}

{% block body %}
    <form method="post" data-form-checker="true">
        {{ form_start(form) }}

        <div class="stickyPageHeader">
            <div>
                <h1>{{ title }}</h1>
                <p>It's an battle. And...</p>
            </div>
            <button class="emphasis" type="submit"><i class="fas fa-sack"></i>{{ actionName }}</button>
        </div>

        <div class="strip">
            <div class="panels">

                <div class="card">
                    <div class="body">
                        {{ form_row(form.name) }}
                    </div>
                </div>

            </div>
        </div>

        {{ form_end(form) }}
    </form>
{% endblock %}